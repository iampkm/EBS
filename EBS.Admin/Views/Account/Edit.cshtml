@model EBS.Domain.Entity.Account
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!-- demo root element -->
<div id="app" class="box box-primary">
    <div class="box-header with-border">
        <ol class="breadcrumb" style="padding:0px;margin:1px;">
            <li><a href="/Account/Index"><i class="fa fa-dashboard"></i>账号管理</a></li>
            <li class="active"><a href="/Account/Edit/{{model.id}}">修改账号</a></li>
        </ol>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    <form v-on:submit.prevent="onSubmit">
        <div class="box-body">
            <v-form v-bind:valid.sync="valid">
                <div class="row">
                    <div class="col-sm-4 col-xs-4">
                        <input type="hidden" v-model="model.id" />
                        <v-input type="text" label="账号名：" v-bind:value.sync="model.userName" help="账号名称必须6~30位之间" minlength="6" maxlength="30" placeholder="账号名" disabled required icon></v-input>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-sm-4 col-xs-4">
                        <v-input type="text" label="昵称：" v-bind:value.sync="model.nickName" placeholder="昵称" required icon></v-input>
                    </div>
                </div>                
                <div class="row">
                    <div class="form-group col-sm-2 col-xs-2">
                        <label for="inputPassword3" class="control-label">角色：</label>
                        <select class="form-control" v-model="model.roleId">
                            <option value="0">--请选择--</option>
                            @foreach (var item in ViewBag.Roles)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                    </div>
                </div>
            </v-form>
        </div>
        <div class="box-footer">
            <div class="row">
                <div class="col-sm-4 col-xs-4">
                    <button type="submit" class="btn btn-warning btn-flat" v-bind:disabled="!valid">保 存</button>
                    <a class="btn btn-default btn-flat" href="/Account/Index">取 消</a>
                </div>
            </div>
        </div>
    </form> 
</div>
@section scripts{
    <script>
        $("doucument").ready(function () {
            var demo = new Vue({
                components: {
                    'v-input': VueStrap.input,
                    'v-form': VueStrap.formGroup
                },
                el: '#app',
                data: {
                    valid: false,
                    model: {
                        id:@Model.Id,
                        userName: '@Model.UserName',
                        nickName: '@Model.NickName',
                        roleId: @Model.RoleId,
                    },
                },
                methods: {
                    onSubmit: function () {
                        //获取选择节点
                        var v_data = this.model;
                        if (v_data.roleId == 0) { bootbox.alert("请选择角色！"); return; }
                        $.post("/Account/Edit", v_data, function (result) {
                            if (result.success) {
                                bootbox.alert("保存成功！", function () {
                                    window.location.href = "/Account/Index";
                                });
                            }
                            else {
                                bootbox.alert(result.error);
                            }
                        }, "json");
                    }
                }
            });

        });

    </script>
}







