@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!-- demo root element -->
<div id="app">
    <div class="box box-primary">
        <div class="box-header">
            <ol class="breadcrumb" style="padding:0px;margin:1px;">
                <li><a href="/StocktakingPlan/Index"><i class="fa fa-dashboard"></i>盘点管理</a></li>
                <li class="active"><a href="/StocktakingPlan/Summary">盘点差错汇总表</a></li>
                <li class="active"><a href="/StocktakingPlan/Detail/{{searchArgs.planId}}">盘点明细表</a></li>
            </ol>
        </div>
        <div class="box-body">
            <vue-table v-ref:vtable v-bind:columns="gridColumns"
                       v-bind:url="url"
                       v-bind:args="searchArgs" v-bind:data.sync="rows" show-pagination="false">
                <div class="row" style="margin-bottom:10px;" slot="customSearch">
                    <div class="col-xs-3 col-sm-2"> 
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-bar-chart"></i></span>
                            <input class="form-control" v-model="searchArgs.from" placeholder="差异从" debounce="500" />
                        </div>
                    </div>                   
                    <div class="col-xs-3 col-sm-2">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-bar-chart"></i></span>
                            <input class="form-control" v-model="searchArgs.to" placeholder="差异到" debounce="500" />
                        </div>
                    </div>               
                    <div class="col-sm-2 col-xs-3">
                        <v-checkbox checked.sync="searchArgs.showDifference" value="true" type="success">显示差异</v-checkbox>
                    </div>
                </div>
                <span class="input-group-btn" slot="customButtons">
                    <button type="button" class="btn btn-warning btn-flat" v-on:click="submitAudit()">打印</button>
                    <button type="button" class="btn btn-danger btn-flat" v-on:click="submitAudit()">导出Excel</button>
                    <a class="btn btn-success btn-flat" href="/StocktakingPlan/Help">盘点助手</a>
                </span>
            </vue-table>
        </div>
        <!-- /.box-body -->
    </div>
    <div class="clearfix"></div>
</div>
@{Html.RenderPartial("VueTableTemplate");}
@section scripts{
    <script src="~/Content/Vue/vuetable/vuetable.js"></script>
    <script>
        $("doucument").ready(function () {
            var vue = new Vue({
                components: {
                    'v-modal': VueStrap.modal,
                    'v-input': VueStrap.input,
                    'v-checkbox': VueStrap.checkbox,
                },
                el: '#app',
                data: {
                    gridColumns: [
                    { name: 'ProductCode', localName: '编码', style: "<a href='/StocktakingPlan/Edit/{id}'>{column}</a>" },
                    { name: 'BarCode', localName: '条码' },
                    { name: 'ProductName', localName: '品名', width: '200' },
                    { name: 'Specification', localName: '规格', width: '80' },
                    { name: 'SalePrice', localName: '售价', width: '80',visible:false },
                    { name: 'CostPrice', localName: '成本' },
                     { name: 'Quantity', localName: '库存数' },
                    { name: 'CountQuantity', localName: '盘点数' },
                    { name: 'DifferentQuantity', localName: '差异数',style: "<strong>{column}</strong>" },
                     { name: 'CostAmount', localName: '成本' },
                    { name: 'CostCountAmount', localName: '盘点成本' },
                    { name: 'CostAmountDifferent', localName: '成本差异',style: "<strong>{column}</strong>" },
                     { name: 'SaleAmout', localName: '金额' },
                    { name: 'SaleCountAmount', localName: '盘点金额' },
                    { name: 'SaleAmoutDifferent', localName: '金额差异',style: "<strong>{column}</strong>" },
                    ],
                    url: "/StocktakingPlan/LoadDetail",
                    searchArgs: { planId: '', from: null, to:null, showDifference: false },
                    rows: []                    
                },
                methods: {
                    submitAudit: function () {
                        var selectRow = this.rows.filter(function (item, index) {
                            if (item.checked) {
                                return true;
                            }
                        });
                        if (selectRow.length == 0) {
                            bootbox.alert("请选择一条记录");
                            return;
                        }
                        var selectId = selectRow[0].Id;
                        v_self = this;
                        bootbox.confirm("您确定提交该记录？", function (result) {
                            if (result) {
                                $.post("/StocktakingPlan/StartPlan", { id: selectId }, function (result) {
                                    if (result.success) {
                                        v_self.$refs.vtable.loadData();
                                    }
                                    else {
                                        bootbox.alert(result.error);
                                    }
                                }, "json");
                            }
                        });
                    },                    
                }

            });
        });
    </script>
}




