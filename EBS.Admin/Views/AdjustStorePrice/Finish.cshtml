@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section styles{
    <link href="~/Content/zTree.min.css" rel="stylesheet" />
    <style>
        .ztree li span {
            font-size: 14px;
        }

        .dataRow div {
            margin-bottom: 0px;
        }
    </style>
}
<!-- demo root element -->
<div id="app">
    <div class="box box-primary">
        <div class="box-header">
            <ol class="breadcrumb" style="padding:0px;margin:1px;">
                <li><a href="/AdjustStorePrice/Finish"><i class="fa fa-dashboard"></i> 门店调价-已审</a></li>
            </ol>
        </div>
        <div class="box-body">
            <vue-table v-ref:vtable v-bind:columns="gridColumns"
                       v-bind:url="url"
                       v-bind:args="searchArgs" v-bind:data.sync="rows" >
                <div class="row" style="margin-bottom:10px;" slot="customSearch">
                    <div class="col-xs-3 col-sm-2">
                        <input class="form-control" v-model="searchArgs.code" placeholder="调价单号" debounce="500" />
                    </div>
                    <div class="col-xs-3  col-sm-2">
                        <input class="form-control" v-model="searchArgs.productCodeOrBarCode" placeholder="商品编码或条码" debounce="500" />
                    </div>
                    <div class="col-sm-2 col-xs-3" v-show="selectStore.view">
                        <div class="input-group ">
                            <input type="hidden" class="form-control" v-model="searchArgs.storeId">
                            <input type="text" class="form-control" v-model="selectStore.name" placeholder="选择门店" readonly>
                            <span class="input-group-btn">
                                <button class="btn btn-flat btn-default" type="button" v-on:click="showStore"><i class="fa fa-search"></i></button>
                                <button class="btn btn-flat btn-default" type="button" v-on:click="clearStore"><i class="fa fa-eraser"></i></button>
                            </span>
                        </div>
                    </div>
                    <div class="form-group col-sm-2 col-xs-3">
                        @*<label for="inputPassword3" class="control-label">创建日期：</label>*@
                        <div class="input-group date" data-provide="datepicker" data-date-format="yyyy-mm-dd"
                             data-date-language="zh-CN" data-date-clear-btn="true" data-date-autoclose="true">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            <input type="text" class="form-control" v-model="searchArgs.createdOn" placeholder="创建日期" readonly>
                        </div>
                    </div>   
                    @*<div class="form-group col-sm-2 col-xs-3">
                            <div class="input-group">
                                <span class="input-group-addon">状态</span>
                                <select name="brand" class="form-control" v-model="searchArgs.status">
                                    <option value="0">-请选择-</option>
                                    @foreach (var item in ViewBag.Status)
                                    {
                                        <option value="@item.Key">@item.Value</option>
                                    }
                                </select>
                            </div>
                        </div>*@
                </div>
                <span class="input-group-btn" slot="customButtons">
                    @*<a class="btn btn-warning btn-flat" href="/AdjustStorePrice/Create">新 增</a>
                    <button type="button" class="btn btn-success btn-flat" v-on:click="submitAudit()">提交待审</button>
                    <button type="button" class="btn btn-danger btn-flat" v-on:click="remove()">作 废</button>*@
                </span>
            </vue-table>
        </div>
        <!-- /.box-body -->
    </div>
    <div class="clearfix"></div>
    <!-- modal -->
    <v-modal title="作废原因" ok-text="确 定" cancel-text="取 消" v-bind:callback="callback" v-bind:show.sync="modal" v-bind:effect="fade" width="300">
        <div slot="modal-body" class="modal-body">
            <input type="hidden" v-model="selectedId" />
            <v-input type="textarea" v-bind:value.sync="removeReason" placeholder="请录入作废理由" required icon></v-input>
        </div>
    </v-modal>
    <v-modal title="选择门店" ok-text="确 定" cancel-text="取 消" v-bind:callback="getStore" v-bind:show.sync="selectStore.modal" v-bind:effect="fade" width="60%">
        <div slot="modal-body" class="modal-body">
            <div style="min-height:350px;max-height:500px;overflow:auto;"><ul id="ztree" class="ztree"></ul></div>
        </div>
    </v-modal>
</div>
@{Html.RenderPartial("VueTableTemplate");}
@section scripts{
    <script src="~/Content/Vue/vuetable/vuetable.js"></script>
    <script src="~/Scripts/jquery.ztree.all-3.5.min.js"></script>
    <script src="~/Scripts/jquery.PrintArea.js"></script>
    <script>

        var vue = new Vue({
            components: {
                'v-modal': VueStrap.modal,
                'v-input': VueStrap.input
            },
            el: '#app',
            data: {
                modal: false,
                selectedId: 0,
                removeReason: '',
                searchQuery: '',
                gridColumns: [
                    { name: 'StoreName', localName: '门店' },
                    { name: 'Code', localName: '调价单号', style: "<a href='/AdjustStorePrice/Detail/{id}'>{column}</a>", width: '100' },
                    { name: 'ProductCode', localName: '商品编码', width: '100' },
                    { name: 'BarCode', localName: '条码' },
                    { name: 'ProductName', localName: '品名' },
                    { name: 'Specification', localName: '规格', width: '80' },
                    { name: 'Unit', localName: '单位', width: '80' },
                    { name: 'StoreSalePrice', localName: '原售价',  width: '100' },
                    { name: 'AdjustPrice', localName: '调整售价',  width: '100',style:"<span class='text-primary'><strong>{column}</strong></span>" },
                    { name: 'AdjustStorePriceStatus', localName: '状态', width: '80' },
                    //{ name: 'CreatedByName', localName: '创建人' },
                    //{ name: 'CreatedOnString', localName: '创建日期', width: '180' },
                    { name: 'UpdatedByName', localName: '审核人', width: '100' },
                    { name: 'UpdatedOn', localName: '审核时间'},
                    { name: 'Remark', localName: '备注', width: '200' }
                ],
                url: "/AdjustStorePrice/QueryFinish",
                searchArgs: { code: '', productCodeOrBarCode: '', storeId: '@ViewBag.StoreId', status: 3,createdOn:'' },
                rows: [],
                selectStore: {
                    modal: false,
                    name: '@ViewBag.StoreName',
                    view: @ViewBag.View,
                }
            },
            methods: {
                remove: function () {
                    var selectRow = this.rows.filter(function (item, index) {
                        if (item.checked) {
                            return true;
                        }
                    });
                    if (selectRow.length == 0) {
                        bootbox.alert("请选择一条记录");
                        return;
                    }
                    this.selectedId = selectRow[0].Id;
                    this.modal = true;
                },
                callback: function () {
                    var v_self = this;
                    var selectId = v_self.selectedId;
                    var remark = v_self.removeReason;
                    $.post("/AdjustStorePrice/Delete", { id: selectId, reason: remark }, function (result) {
                        if (result.success) {
                            v_self.$refs.vtable.loadData();
                            v_self.modal = false;
                        }
                        else {
                            bootbox.alert(result.error);
                        }
                    }, "json");
                },
                submitAudit: function () {
                    var selectRow = this.rows.filter(function (item, index) {
                        if (item.checked) {
                            return true;
                        }
                    });
                    if (selectRow.length == 0) {
                        bootbox.alert("请选择一条记录");
                        return;
                    }
                    var selectId = selectRow[0].Id;
                    v_self = this;
                    bootbox.confirm("您确定提交该记录？", function (result) {
                        if (result) {
                            $.post("/AdjustStorePrice/Submit", { id: selectId }, function (result) {
                                if (result.success) {
                                    v_self.$refs.vtable.loadData();
                                }
                                else {
                                    bootbox.alert(result.error);
                                }
                            }, "json");
                        }
                    });
                },
                showStore: function () {
                    this.selectStore.modal = true;
                },
                clearStore: function () {
                    this.searchArgs.storeId = 0;
                    this.selectStore.name = "";
                },
                getStore: function () {
                    var treeObj = $.fn.zTree.getZTreeObj("ztree");
                    var selecteds= treeObj.getCheckedNodes(true);
                    if (selecteds) {
                        var idArray = new Array();
                        var nameArray = new Array();
                        selecteds.forEach(function(item){
                            if(item.level==1){
                                idArray.push(item.id);
                                nameArray.push(item.name);
                            }
                        })
                        if(idArray.length>0){
                            this.searchArgs.storeId = idArray.join();
                            this.selectStore.name = nameArray.join();
                            this.selectStore.modal = false;
                        }
                        else
                        {
                            bootbox.alert("请选择一个门店");
                        }
                    }
                },
            }
        });

        //加载门店tree
        var zTreeObj;
        var setting = {
            check: {
                enable:true
            },
            async: {
                enable: true,
                url: "/Store/LoadStore",
                //autoParam: ["id", "name"]
            },
            callback:{
                onClick:function(event, treeId, treeNode){
                    //点击展开/折叠节点
                    var treeObj = $.fn.zTree.getZTreeObj("ztree");
                    var open = !treeNode.open;
                    treeObj.expandNode(treeNode, open, false, false);
                    // vue.searchArgs.categoryId =treeNode.id;
                }
            }
        };
        zTreeObj = $.fn.zTree.init($("#ztree"), setting);

    </script>
}












